<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#dde"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <ImageView
        android:id="@+id/img0"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="5dp" />

    <TextView
        android:id="@+id/txt_province"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="txt_province"
        android:layout_alignBottom="@+id/img0"
        android:layout_toRightOf="@+id/img0"
        android:layout_toEndOf="@+id/img0"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/txt_topic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:singleLine="true"
        android:text="txt_topic"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/img0"
        android:layout_toEndOf="@+id/img0" />

    <!-- img0, txt_status, txt_topic, txt_datetime, txt_price,  -->
    <TextView
        android:id="@+id/txt_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="txt_price"
        android:layout_alignBottom="@+id/txt_province"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>